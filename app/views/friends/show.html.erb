
<div class="card text-center">
  <div class="card-header">
    Info
  </div>
  <div class="card-body">
    <h5 class="card-title">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
    </h5>
    <p class="card-text">
    <%= @friend.email %>
    <br/>
    <%= @friend.phone %>
    <br/>
    <%= @friend.twitter %>
    </p>
    
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
  </div>
</div>



